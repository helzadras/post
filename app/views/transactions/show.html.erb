
<div class="d-flex justify-content-between align-items-center">
    <h2>Transactions</h2>
    <% link_to image_tag('plus.svg', :size => "50x50"), new_transaction_path %>
</div>   

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date:</th>
      <th>Source:</th>
      <th>Description:</th>
      <th>Amount:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date %></td>
        <td><%= transaction.source %></td>
        <td><%= transaction.description %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= link_to "Show", transaction, class: "btn btn-secondary" %></td>
        <td><%= link_to "Edit", edit_transaction_path(transaction), class: "btn btn-primary" %></td>
        <td><%= button_to "Destroy", transaction, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

