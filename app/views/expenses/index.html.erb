
<div class="d-flex justify-content-between align-items-center">
  <h1>Expenses
    <%= link_to image_tag('plus.svg', :size => "40x40"), new_expense_path %>
  </h1>
</div>

<div id="expenses">
  <% @expenses.each do |expense| %>
    <a href="<%= expense_path(expense) %>" class="card-link">
    <div class="card border-white">
      <div class="card-body">
        <%= render expense %>
        <%= link_to "Show this expense", expense, class:"btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>


